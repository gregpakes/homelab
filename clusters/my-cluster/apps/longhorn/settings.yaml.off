# Taint toleration so Longhorn can run on tainted storage nodes
apiVersion: longhorn.io/v1beta2
kind: Setting
metadata:
  name: taint-toleration
  namespace: longhorn-system
value: dedicated=longhorn:NoSchedule
---
# Keep Longhorn system components on storage nodes (JSON string)
apiVersion: longhorn.io/v1beta2
kind: Setting
metadata:
  name: system-managed-components-node-selector
  namespace: longhorn-system
value: 'longhorn:true'