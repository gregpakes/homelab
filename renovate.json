{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "argocd": {
    "managerFilePatterns": [
      "(?i)^(?:argocd)(?:/.*)?/[^/]+\\.ya?ml$",
      "(?i)^argocd/[^/]+\\.ya?ml$",
      "(?i)^argocd\\.ya?ml$"
    ]
  },

  "flux": {
    "managerFilePatterns": [
      "^clusters/.*\\.ya?ml$"
    ]
  },

  "kubernetes": {
    "managerFilePatterns": [
      "^clusters/.*\\.ya?ml$"
    ]
  }
}
