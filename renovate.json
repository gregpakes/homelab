{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "argocd": {
    "managerFilePatterns": [
      "^argocd/.*\\.ya?ml$"   // Scan only Argo Application manifests
    ]
  },

  "flux": {
    "managerFilePatterns": [
      "^clusters/.*\\.ya?ml$"  // Scan Flux HelmRelease/Kustomization manifests
    ]
  },

  "kubernetes": {
    "managerFilePatterns": [
      "^clusters/.*\\.ya?ml$" // Also catch raw YAML with container image tags
    ]
  }
}
